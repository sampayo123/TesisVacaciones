<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @if (!context.User.Identity.IsAuthenticated)
                    {
                        <RedirectToLogin />
                    }
                    else
                    {
                <body>
                    <div align="center">
       
                        <h2>No esta autorizado <span><img src="/Imagenes/advertencia.png"  width="50" height="50"/></span></h2>

                        <div class="media-content">
                            @* <img src="~/Imagenes/Error.png"/>*@
                            <img src="/Imagenes/401.png" />
                        </div>
                    </div>
                </body>

                    }
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <body>
                    <div align="center">

                        <h2>No encontrado <span><img src="/Imagenes/advertencia.png" width="50" height="50" /></span></h2>

                        <div class="media-content">
                            @* <img src="~/Imagenes/Error.png"/>*@
                            <img src="/Imagenes/error-404.png" />
                        </div>
                    </div>
                </body>
 
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
